<div class="row">
    <div class="col-md-12">
        <h2>Items <br><a href="/items/add" class="btn btn-success pull-right">Add Item</a></h2>
        <hr />
        {{#unless items}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}


        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Published</th>
                    <th></th>
                </tr>

                {{#each items}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{#formatDate postDate}}{{/formatDate}}</td>
                    <td>{{price}}</td>
                    <td>{{category}}</td>
                    <td>{{published}}</td>
                    <td><a href="/items/delete/{{id}}" class="btn btn-danger">Remove</a></td>
                </tr>
                {{/each}}
            </table>
        </div>

    </div>
</div>